^PageTitle = "Upcoming Nerd Dinners";
^ShowSearch = false;

%div { class="hslice" id="1" }
	%h2.entry-title Upcoming Dinners
	%a { rel="feedurl" href="/Dinners/WebSliceUpcoming" style="display:none;" }
	%ul.upcomingdinners
		- foreach (var dinner in Model)
			%li
				!=Html.ActionLink(dinner.Title, "Details", new { id=dinner.DinnerID })
				on 
				%strong
					=dinner.EventDate.ToString("yyyy-MMM-dd")
					=dinner.EventDate.ToString("HH:mm tt")
				at 
				=dinner.Address + " " + dinner.Country
	%div.pagination
		- if (Model.HasPreviousPage)
			!=Html.RouteLink("<<< Previous Page", "UpcomingDinners",  new { page=(Model.PageIndex-1) })

		-if (Model.HasNextPage)
			!=Html.RouteLink("Next Page >>>", "UpcomingDinners", new { page = (Model.PageIndex + 1) })

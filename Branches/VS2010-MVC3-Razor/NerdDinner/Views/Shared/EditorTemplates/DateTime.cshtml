@inherits System.Web.Mvc.WebViewPage<System.DateTime>
@Html.TextBox("", String.Format("{0:yyyy-MM-dd HH:mm}",Model))
<script type="text/javascript">
    $(function () {
        $('#@ViewData.TemplateInfo.GetFullHtmlFieldId("")').datetime({
            userLang: 'en',
            americanMode: true
        });
    });
</script>
